    ViewData["Title"] = "Pizzeria";
    Layout = null;
    List<Pizza> pizze = new List<Pizza>();
    pizze.Add(new Pizza("Margherita", "Pomodoro e Mozzarella", "https://images.pexels.com/photos/18431672/pexels-photo-18431672/free-photo-of-e-l-ora-della-pizza-con-lievito-madre.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1", 5.00m));
    pizze.Add(new Pizza("Quattro Stagioni", "Pomodoro, Mozzarella, Funghi, Carciofi, Prosciutto Cotto", "https://tse4.mm.bing.net/th?id=OIP.-WRAk4xOUdcb9XgC3DnelgHaFG&pid=Api&P=0&h=180", 7.50m));
    pizze.Add(new Pizza("Diavola", "Pomodoro, Mozzarella, Salame Piccante", "https://www.tastybits.de/wp-content/uploads/2023/01/feurig-scharfe-pizza-diavolo-selber-backen.jpg", 6.50m));
    pizze.Add(new Pizza("Capricciosa", "Pomodoro, Mozzarella, Funghi, Carciofi, Prosciutto Cotto, Olive", "https://www.melarossa.it/wp-content/uploads/2021/02/pizza-capricciosa-ingredienti.jpg?x71872", 8.00m));
    pizze.Add(new Pizza("Prosciutto e Funghi", "Pomodoro, Mozzarella, Prosciutto Cotto, Funghi", "https://tse3.mm.bing.net/th?id=OIP.j_z4MDZ9XVpk2gb0i6xBBwHaEO&pid=Api&P=0&h=180", 6.50m));
    pizze.Add(new Pizza("Quattro Formaggi", "Mozzarella, Gorgonzola, Fontina, Grana Padano", "https://tse3.mm.bing.net/th?id=OIP.b8wlZ8lQD6U25pBZRB_oOgHaE8&pid=Api&P=0&h=180", 8.00m));
    pizze.Add(new Pizza("Rustica", "Pomodoro, Mozzarella, Salsiccia, Patate, Rosmarino", "https://tse2.mm.bing.net/th?id=OIP.w_QoeH4-rcp9kuwWMVI67QHaFj&pid=Api&P=0&h=180", 7.50m));
    pizze.Add(new Pizza("Tonno e Cipolla", "Pomodoro, Mozzarella, Tonno, Cipolla", "https://tse2.mm.bing.net/th?id=OIP.BxKPPeXp9Ik6baCwRkbUagHaEK&pid=Api&P=0&h=180", 7.00m));
    pizze.Add(new Pizza("Vegetariana", "Pomodoro, Mozzarella, Verdure Grigliate", "https://tse1.mm.bing.net/th?id=OIP.cRd2t4oPlY8Ny30gKs6QyQHaE9&pid=Api&P=0&h=180", 7.50m));
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg">
    <div class="container-fluid">
        <h1 class="text-center p-5">Pizzeria da <b>PANKO!</b></h1>
        <p class="text-center p-3">Scegli la pizza e sarai super satisfied!</p>
        <div class="container">
            <div class="row">
               @foreach (var pizza in pizze)
                {
                    <div class="col-5 col-lg-4 mb-4">
                        <div class="card">
                            <div class="pizze">
                                <img src="@pizza.img" alt="@pizza.name">
                                <div class="card-body">
                                    <h5 class="card-title">@pizza.name</h5>
                                    <p class="card-text">@pizza.description</p>
                                    <p class="card-text">Prezzo: €@pizza.price</p>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>



    <style>

        h1 {
            font-family: Broadway, sans-serif;
            font-weight: 400;
            font-style: normal;
            color: white;
        }


        p {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: antiquewhite;
            font-size: 25px;
        }




        .bg {
            /* Basic dimensions and centering */
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #121212; /* Fallback for browsers that don't support gradients */
            background: linear-gradient( 135deg, #121212 25%, #1a1a1a 25%, #1a1a1a 50%, #121212 50%, #121212 75%, #1a1a1a 75%, #1a1a1a );
            background-size: 40px 40px;
            /* Animation */
            animation: move 4s linear infinite;
        }

        @@keyframes move {
            0% {
                background-position: 0 0;
            }

            100% {
                background-position: 40px 40px;
            }
        }


        .card {
            height: 400px;
            transition: transform 0.3s ease-out;
            border-radius: 50px;
            overflow: auto;
            background-color: darkseagreen;
        }

            .card:hover {
                transform: scale(1.1);
            }

        img {
            width: 100%;
            height: 150px;
            object-fit: cover;
        }
    </style>

</body>
</html>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>